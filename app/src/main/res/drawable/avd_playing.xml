<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="@dimen/icon_radio_list"
            android:height="@dimen/icon_radio_list"
            android:viewportWidth="56"
            android:viewportHeight="56">
            <group
                android:name="group"
                android:pivotX="6"
                android:pivotY="6"
                android:translateX="22"
                android:translateY="22">
                <group
                    android:name="group_1"
                    android:pivotX="6"
                    android:pivotY="6"
                    android:scaleX="1.3"
                    android:scaleY="1.3">
                    <path
                        android:name="path"
                        android:pathData="M 2 6 C 2 3.8 3.8 2 6 2 C 8.2 2 10 3.8 10 6 C 10 8.2 8.2 10 6 10 C 3.8 10 2 8.2 2 6"
                        android:fillColor="#000000"/>
                </group>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="250"
                    android:valueFrom="1"
                    android:valueTo="0.6"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="250"
                    android:valueFrom="1"
                    android:valueTo="0.6"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:startOffset="250"
                    android:duration="250"
                    android:valueFrom="0.6"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:startOffset="250"
                    android:duration="250"
                    android:valueFrom="0.6"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
